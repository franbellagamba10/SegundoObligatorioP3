@model IEnumerable<Dominio.Entidades.Ficha>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.temperatura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.frecuenciaRiego.cantidad)/
                @Html.DisplayNameFor(model => model.frecuenciaRiego.tiempo)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.tipoIluminacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.temperatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.frecuenciaRiego.cantidad) veces/
                @Html.DisplayFor(modelItem => item.frecuenciaRiego.tiempo)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.tipoIluminacion.iluminacion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
}
    </tbody>
</table>
