@model ProyectoWeb.Models.PlantaViewModel

@{
    ViewData["Title"] = "Busqueda";
}

<h1>Busqueda</h1>

<h4>PlantaViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Busqueda">
            
            <div class="form-group">
                <label for="nombre" class="control-label">Nombre</label>
                <input name="nombre" class="form-control" />                
            </div>
            <div class="form-group">
                <label for="ambiente" class="control-label">Ambiente</label>
                <select name="ambiente" value="@Model.ambiente">
                    <option value="0">Seleccione un ambiente</option>
                    @foreach (var opcion in Enum.GetValues(typeof(PlantaViewModel.Ambiente)))
                    {
                        int val = (int)opcion;
                        <option value="@val">@opcion.ToString()</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Tipo:</label>
                <select name="tipoPlanta">
                    <option value="0">Seleccione un Tipo de planta</option>
                    @foreach (var tipo in Model.TiposPlanta)
                    {
                        <option value="@tipo.id">@tipo.nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="alturaMaxima" class="control-label">Altura desde cm</label>
                <input name="alturaMaximaDesde" class="form-control" />                
            </div>
            <div class="form-group">
                <label for="alturaMaxima" class="control-label">Altura hasta cm</label>
                <input name="alturaMaximaHasta" class="form-control" />               
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
